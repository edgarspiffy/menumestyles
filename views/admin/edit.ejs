<% include ../partials/mainHeader %>


<div style='background:#ccc' class="container edit-form pt-3">




  <div class="container">
    <div class="row">
      <div class="col-6" id='admin-edit-form'>
        <form method="POST" action="/admin/<%= id %>?_method=put">
          <% include ./forms/spotInfo %>
        </form>
      </div>
    </div>
  </div>

</div>



















<div style='background:#ccc' class="container pt-3 pb-3">
  <form method="POST" action="/admin/<%= id %>?_method=delete">
    <button class='btn' style='background-color:red;color:white;'>Delete</button>
  </form>
</div>






<div style='background:lightskyblue' class="container mt-5 pt-3 pb-3">
  <h3 style='color:black;'>Add A Dish</h3>
  <form method='POST' action="/admin/newDish/<%= id %>">
    <div class="form-row">
      <div class="form-group col-2">
        <label for="dishName">Name</label>
        <input class="form-control" id='dishName' name='dishName' type="text" required>
      </div>

      <div class="form-group col-6">
        <label for="ingredients">ingredients (seperate by comma)</label>
        <input class="form-control" id='ingredients' name='ingredients' type="text" required>
      </div>

      <div class="form-group col-2">
        <label for="price">Price</label>
        <input class="form-control" id='price' name='price' type="text" required>
      </div>


      <div class="form-group col-2">
        <label for="submit">Add New Dish</label>
        <input style='background:blue;color:white;' class='btn btn-block' id='submit' value='Save' type="submit">
      </div>
    </div>
  </form>
</div>







<div class="container mb-5">
  <div class="row">
    <% data.dishes.forEach(element => { %>
    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= element.name %></h2>
          <hr>
          <h4 class="card-subtitle">Ingredients</h4>
          <p class="card-text"><%= element.ingredients %>
          <h4 class="card-subtitle">Price</h4>
          <p class="card-text"><%= element.price %>
          <h4 class="card-subtitle">Restaurant Name</h4>
          <p class="card-text"><%= element.restaurant %>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%= data %>

<% include ../partials/mainFooter %>