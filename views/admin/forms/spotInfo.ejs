<!-- BASIC INFO -->
<div class="form-row">
  <div class="form-group col-md-4">
    <label for="name">name</label>
    <input class="form-control" value='<%= data.name %>' id='name' name='name' type="text" required>
  </div>
  <div class="form-group col-md-4">
    <label for="website">website</label>
    <input class="form-control" value='<%= data.website %>' id='website' name='website' type="text" required>
  </div>
  <div class="form-group col-md-4">
    <label for="phone">phone</label>
    <input class="form-control" value='<%= data.phone %>' id='phone' name='phone' type="text" required>
  </div>
</div>

<!-- ADDRESS -->
<div class="form-row">
  <div class="form-group col-md-4">
    <label for="address">address</label>
    <input class="form-control" value='<%= data.address %>' id='address' name='address' type="text" required>
  </div>
  <div class="form-group col-md-4">
    <label for="city">city</label>
    <input class="form-control" value='<%= data.city %>' id='city' name='city' value='Oxnard' type="text" required>
  </div>
  <div class="form-group col-md-4">
    <label for="zip">zip</label>
    <input class="form-control" value='<%= data.zip %>' id='zip' name='zip' type="text" required>
  </div>
</div>

